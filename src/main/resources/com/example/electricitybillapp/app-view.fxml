<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.electricitybillapp.AppController">

    <!-- Input fields for the electricity rate in cents per watt for each company -->
    <TextField fx:id="wattageRateCompanyOne" promptText="Enter rate for Company 1 (cents/watt)"/>
    <TextField fx:id="wattageRateCompanyTwo" promptText="Enter rate for Company 2 (cents/watt)"/>

    <!-- Input fields for the electricity rate in cents per watt for each company -->
    <TextField fx:id="janWattage" promptText="Enter January wattage"/>
    <TextField fx:id="febWattage" promptText="Enter February wattage"/>
    <TextField fx:id="marWattage" promptText="Enter March wattage"/>
    <TextField fx:id="aprWattage" promptText="Enter April wattage"/>
    <TextField fx:id="mayWattage" promptText="Enter May wattage"/>
    <TextField fx:id="junWattage" promptText="Enter June wattage"/>
    <TextField fx:id="julWattage" promptText="Enter July wattage"/>
    <TextField fx:id="augWattage" promptText="Enter August wattage"/>
    <TextField fx:id="sepWattage" promptText="Enter September wattage"/>
    <TextField fx:id="octWattage" promptText="Enter October wattage"/>
    <TextField fx:id="novWattage" promptText="Enter November wattage"/>
    <TextField fx:id="decWattage" promptText="Enter December wattage"/>

    <!-- Dropdowns for selecting each electricity company -->
    <ComboBox fx:id="companyOneComboBox" promptText="Select Company 1"/>
    <ComboBox fx:id="companyTwoComboBox" promptText="Select Company 2"/>

    <!-- Line Chart for displaying the financial difference -->
    <LineChart fx:id="lineChart">
        <xAxis>
            <NumberAxis label="Month"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Cost Difference"/>
        </yAxis>
    </LineChart>
    <Button text="Compare" onAction="#compareCompanies"/>
</VBox>

